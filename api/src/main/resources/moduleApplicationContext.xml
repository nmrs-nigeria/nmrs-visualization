<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="visualization.VisualizationConfig" class="org.openmrs.module.visualization.VisualizationConfig"/>
    <bean id="visualization.VisualizationDao" class="org.openmrs.module.visualization.api.dao.VisualizationDao">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory" />
        </property>
    </bean>

    <!-- Wraps VisualizationService methods in DB transactions and OpenMRS interceptors,
    which set audit info like dateCreated, changedBy, etc.-->
    <bean id="visualization.VisualizationService"
            class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.visualization.api.impl.VisualizationServiceImpl">
                <property name="dao" ref="visualization.VisualizationDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <!-- Adds VisualizationService to OpenMRS context so it can be accessed
    calling Context.getService(VisualizationService.class) -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.visualization.api.VisualizationService</value>
                <ref bean="visualization.VisualizationService" />
            </list>
        </property>
    </bean>
</beans>
